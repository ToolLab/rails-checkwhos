<div class="min-h-screen flex flex-col items-center pt-16 sm:pt-24">
  <div class="w-full max-w-xl mx-auto px-4">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">체크후즈</h1>
      <p class="text-gray-600">스팸 번호를 검색하고 공유하세요</p>
    </div>
            
    <%= form_tag search_path(number: ""), method: :get, class: "w-full", id: "search-form" do %>
      <div class="relative">
        <input class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
               type="tel" 
               placeholder="전화번호를 입력하세요 (예: 01012345678)" 
               pattern="[0-9]{10,11}"
               required
               id="phone-number-input">
        <button class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition duration-200" 
                type="submit">
          검색
        </button>
      </div>
            <% end %>

            <div class="mt-8 flex justify-center">
              <script src="https://ads-partners.coupang.com/g.js"></script>
              <script>
                  new PartnersCoupang.G({"id":733737,"trackingCode":"AF8699641","subId":null,"template":"carousel","width":"320","height":"100"});
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('search-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const number = document.getElementById('phone-number-input').value;
  if (number) {
    window.location.href = '/kr/search/' + number;
  }
});
</script>
