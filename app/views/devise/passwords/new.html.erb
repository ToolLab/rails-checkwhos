<div class="min-h-screen py-6 sm:py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 mx-auto">
    <div>
      <%= link_to root_path, class: "flex justify-center" do %>
        <h2 class="text-4xl font-bold text-blue-600">체크후즈</h2>
      <% end %>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= t('devise.shared.links.forgot_your_password') %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        비밀번호를 찾을 수 있도록 이메일을 보내드립니다
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: t('activerecord.attributes.user.email') %>
        </div>
      </div>

      <div>
        <%= f.submit "비밀번호 재설정 메일 받기", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <span class="text-sm text-gray-600">기억나셨나요?</span>
      <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
    </div>
  </div>
</div>
